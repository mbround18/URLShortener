.uk-vertical-align.uk-text-center.uk-height-1-1
  .uk-vertical-align-middle{style: 'width: 250px;'}
    %dv.uk-panel.uk-panel-box
      .uk-row
        %h3 Wooooaaahhh!!!
        %strong Unfortunately this redirect has for some reason been disabled by an Admin! Apologies... Taking you back to the homepage...
        %div#redirect

      .uk-row
        %p
          %span#countdown 5
          seconds
:javascript
  // Total seconds to wait
  var seconds = 5;
  var redir_link = $("#redirect");
  var base_url = window.location.protocol + '//' + window.location.host;

  function set_link_to_base() {
      var redirect_div = $("#redirect");
      redirect_div.append('<a href=' + base_url + ' id="redirectLink">' + base_url + '</a>')
  }

  function countdown() {
      var redir_link = $('#redirectLink');
      seconds = seconds - 1;
      if (seconds < 0) {
          window.location = redir_link.attr('href');
      } else {
          // Update remaining seconds
          document.getElementById("countdown").innerHTML = seconds;
          // Count down using javascript
          window.setTimeout("countdown()", 1000);
      }
  }

  // setting the link to the base url
  set_link_to_base();

  // Run countdown function
  countdown();